@model IEnumerable<Walnut.Entities.JobVacancy>
@using Walnut.Extensions
@using Walnut.Models.CustomHTMLHelpers;
@{
    ViewBag.Title = "Index";
}

<h2>Job Vacancies</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyDepartmentId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CompanyContactRoleId)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @item.GetCompanyDepartmentDescription()
        </td>
        <td>
            @item.GetCompanyContactRoleDescription()
        </td>
        <td>
            @Html.CRUD_ActionLink("Edit", item.GetType().Name, "Edit", item.Id, true) &nbsp;
            @Html.CRUD_ActionLink("Details", item.GetType().Name, "Details", item.Id, true) &nbsp;
            @Html.CRUD_ActionLink("Delete", item.GetType().Name, "Delete", item.Id, true)
        </td>
    </tr>
}
</table>
@Scripts.Render("~/bundles/WalnutUIList")